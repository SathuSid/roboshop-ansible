[Unit]
Description = Catalogue Service

[Service]
User=roboshop
Environment=MONGO="{{ lookup('hashi_vault', 'roboshop-dev/catalogue:MONGO token={{ vault_token }} url=vault-internal.siddevsecops.icu:8200')}}"
Environment=MONGO_URL="{{ lookup('hashi_vault', 'roboshop-dev/catalogue:MONGO_URL token={{ vault_token }} url=vault-internal.siddevsecops.icu:8200')}}"
ExecStart=/bin/node /app/server.js
SyslogIdentifier=catalogue

[Install]
WantedBy=multi-user.target